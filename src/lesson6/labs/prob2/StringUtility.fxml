<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="lesson6.labs.prob2.Controller"
	xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" 
    styleClass="root">
  <padding><Insets top="25" right="25" bottom="10" left="25" /></padding>

	<VBox id="leftbox" GridPane.columnIndex="0" GridPane.rowIndex="0">
		<Button fx:id="countLetters" GridPane.columnIndex="0" GridPane.rowIndex="0" 
 text="Count Letters" onAction="#handleCountLettersAction"/>
  		<Button fx:id="reverseLetters" GridPane.columnIndex="0" GridPane.rowIndex="1"
 text="Reverse Letters" onAction="#handleReverseLettersAction"/>
  		<Button fx:id="removeDuplicates" GridPane.columnIndex="0" GridPane.rowIndex="2" 
 text="Remove Duplicates" onAction="#handleRemoveDuplicatesAction"/>	
	</VBox>
  	

  <VBox id="rightbox" GridPane.columnIndex="1" GridPane.rowIndex="0">
  	<Label text="Input" 
      GridPane.columnIndex="0" GridPane.rowIndex="0" />
  	<TextField fx:id="inputText"
      GridPane.columnIndex="0" GridPane.rowIndex="1" />
  	<Label text="Output" 
      GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="outputText"
      GridPane.columnIndex="0" GridPane.rowIndex="3" />
  </VBox>  
 
  <stylesheets>
    <URL value="@StringUtility.css" />
  </stylesheets>

</GridPane>